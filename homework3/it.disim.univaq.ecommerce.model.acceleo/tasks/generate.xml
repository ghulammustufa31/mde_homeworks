<?xml version="1.0" encoding="UTF-8"?>
<project default="generate" name="it.disim.univaq.ecommerce.model.acceleo">
    <property name="ECLIPSE_HOME" value="../../../../../../../eclipse/modeling-2021-06/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../../../.."/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="it.disim.univaq.ecommerce.model.acceleo.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/it.disim.univaq.ecommerce.model.acceleo/bin"/>
    </path>

    <path id="it.disim.univaq.ecommerce.model.acceleo.classpath">
        <path refid="it.disim.univaq.ecommerce.model.acceleo.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="it.disim.univaq.ecommerce.model.acceleo.libraryclasspath.alljars">
        <pathelement location="../it.disim.univaq.ecommerce.model.acceleo/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="it.disim.univaq.ecommerce.model.acceleo.classpath.alljars">
        <path refid="it.disim.univaq.ecommerce.model.acceleo.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="generate">
        <java classname="it.disim.univaq.ecommerce.model.acceleo.main.Generate" classpathref="it.disim.univaq.ecommerce.model.acceleo.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="generate.alljars">
        <java classname="it.disim.univaq.ecommerce.model.acceleo.main.Generate" classpathref="it.disim.univaq.ecommerce.model.acceleo.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
